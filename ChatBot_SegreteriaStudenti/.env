# Configurazione Modelli Locali (GRATUITI)

# Modello di embedding locale (Sentence Transformers)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# LLM locale tramite Ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b

# Configurazioni Chatbot - Ottimizzate per Performance (Settembre 2025)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_K=3  # Ridotto da 5 per ottimizzare velocità
TEMPERATURE=0.1

# URL Ticketing System UniBg
TICKET_URL=https://helpdesk.unibg.it/

# Configurazioni ChromaDB - Database Ottimizzato (352KB)
VECTORDB_PATH=vectordb
VECTORDB_COLLECTION=unibg_docs

# Debug mode
DEBUG=false

